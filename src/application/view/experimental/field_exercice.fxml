<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<fx:root prefHeight="36.0" prefWidth="267.0" type="HBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.experimental.FieldExercise">
   <children>
      <StackPane HBox.hgrow="NEVER">
         <children>
             <Label fx:id="question" alignment="CENTER_RIGHT" contentDisplay="CENTER" text="Question: " />
         </children>
      </StackPane>
      <StackPane HBox.hgrow="NEVER">
         <children>
             <TextField fx:id="field" onAction="#TestAnswer" />
         </children>
      </StackPane>
      <StackPane>
         <children>
             <Text fx:id="resultOk" fill="#03d311" opacity="0.0" text="✔">
               <font>
                  <Font size="17.0" />
               </font>
            </Text>
            <Text fx:id="resultFaux" fill="RED" opacity="0.0" text="✖">
               <font>
                  <Font size="17.0" />
               </font>
            </Text>
         </children>
      </StackPane>
   </children>
</fx:root>
